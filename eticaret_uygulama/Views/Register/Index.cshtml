<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Kayıt Ol </h1>
                                    </div>
                                    <form class="user" method="post" asp-action="Index" asp-controller="Register">

                                        <div class="form-group">
                                            <input type="text" name="FirstName" class="form-control form-control-user"
                                                   id="exampleInputEmail" aria-describedby="emailHelp"
                                                   placeholder="Adınızı Girin:" required>
                                            
                                        </div>
                                        <div class="form-group">
                                            <input type="text" name="LastName" class="form-control form-control-user"
                                                   id="exampleInputEmail" aria-describedby="emailHelp"
                                                   placeholder="Soyadınızı Girin:" required>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" name="UserName" class="form-control form-control-user"
                                                   id="exampleInputEmail" aria-describedby="emailHelp"
                                                   placeholder="Kullanıcı Adını Girin:" required>
                                        </div>
                                        <div class="form-group">
                                            <input type="email" name="Email" class="form-control form-control-user"
                                                   id="exampleInputEmail" aria-describedby="emailHelp"
                                                   placeholder="Email Adresiniz  Girin:" required>
                                        </div>
                                        <div class="form-group">
                                            <input type="text" name="City" class="form-control form-control-user"
                                                   id="exampleInputEmail" aria-describedby="emailHelp"
                                                   placeholder="Yaşadığınız Şehiri Girin:" required>
                                        </div>

                                        <div class="form-group">
                                            <input type="password" name="Password" class="form-control form-control-user"
                                                   id="exampleInputPassword" placeholder="Şifrenizi Girin:" required>
                                            <span id="password-error" class="text-danger" style="display:none;"></span>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" name="ConfirmPassword" class="form-control form-control-user"
                                                   id="exampleInputConfirmPassword" placeholder="Tekrar Şifrenizi Girin:">
                                            <span id="confirm-password-error" class="text-danger" style="display:none;" required></span>
                                        </div>

                                        <button type="submit" id="register-button" class="btn btn-primary btn-user btn-block" disabled>Kayıt Ol</button>


                                        <hr>
                                        <a href="index.html" class="btn btn-google btn-user btn-block">
                                            <i class="fab fa-google fa-fw"></i> Login with Google
                                        </a>
                                        <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                            <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                                        </a>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">Şifremi Unuttum?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="register.html">Yeni Üyelik!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Admin1/vendor/jquery/jquery.min.js"></script>
    <script src="~/Admin1/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Admin1/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Admin1/js/sb-admin-2.min.js"></script>

</body>
<script>
    const passwordInput = document.getElementById('exampleInputPassword');
    const confirmPasswordInput = document.getElementById('exampleInputConfirmPassword');
    const passwordError = document.getElementById('password-error');
    const confirmPasswordError = document.getElementById('confirm-password-error');

    function validatePasswords() {
        console.log("Şifre doğrulama işlemi başladı."); // Test mesajı
        const password = passwordInput.value;
        const confirmPassword = confirmPasswordInput.value;

        let isValid = true;

        // Şifre kuralları
        passwordError.textContent = ""; // Hata mesajlarını temizle
        confirmPasswordError.textContent = ""; // Hata mesajlarını temizle

        if (password.length < 6) {
            passwordError.textContent = "Şifre en az 6 karakter olmalıdır.";
            isValid = false;
        }

        if (!/[A-Z]/.test(password)) {
            passwordError.textContent += " En az bir büyük harf içermelidir.\n";
            isValid = false;
        }

        if (!/[0-9]/.test(password)) {
            passwordError.textContent += " En az bir rakam içermelidir.\n";
            isValid = false;
        }

        // Şifrelerin eşleşip eşleşmediğini kontrol et
        if (password !== confirmPassword) {
            confirmPasswordError.textContent = "Şifreler eşleşmiyor.";
            isValid = false;
        }

        // Hata mesajlarını göster/gizle
        
        passwordError.style.display = passwordError.textContent ? 'block' : 'none';
        confirmPasswordError.style.display = confirmPasswordError.textContent ? 'block' : 'none';
      

        // Kayıt ol butonunu etkinleştir/etkisiz hale getir
        document.getElementById('register-button').disabled = !isValid;
    }

    passwordInput.addEventListener('input', validatePasswords);
    confirmPasswordInput.addEventListener('input', validatePasswords);

    document.querySelector('form').addEventListener('submit', function (event) {
        if (document.getElementById('register-button').disabled) {
            event.preventDefault(); // Buton pasifse form gönderimini engelle
        }
    });

</script>



</html>